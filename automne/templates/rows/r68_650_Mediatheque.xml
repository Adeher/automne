<row>
	<block module="pmedia" id="mediassearch" language="fr">
		<div id="mediasearch">
			<script type="text/javascript">
				var pageURL = '{page:self:url}';
			</script>
			<form action="{page:self:url}" method="get">
				<h2>Rechercher des documents et m&eacute;dias : </h2>
				<div class="mediaForm">
					<div class="formKeywords">
						<label for="keyword">Mots Cl&eacute;s : </label><br /><input type="text" id="keyword" name="keyword" value="{request:string:keyword}" /><br />
					</div>
					<div class="formCat">
						<label for="cat">Cat&eacute;gorie : </label><br />
						<select id="cat" name="cat">
							<option value=""> </option>
							<atm-function function="selectOptions" object="{['object2']['fields'][8]}" selected="{request:int:cat}"></atm-function>
						</select>
					</div>
					<div id="loadingSearch"><img src="img/demo/interieur/loading-media.gif" alt="Chargement ..." title="Chargement ..." /></div>
					<input type="submit" class="button" name="search" id="submitSearch" value="ok" />
					<div class="spacer"></div>
				</div>
			</form>
		</div>
		<div id="searchresult">
			<atm-xml what="{request:string:out} == 'xml'">
				<atm-search what="{['object2']}" name="mediaresult">
					<atm-search-param search="mediaresult" type="{['object2']['fields'][8]['fieldID']}" value="{request:int:cat}" mandatory="false" />
					<atm-search-param search="mediaresult" type="keywords" value="{request:string:keyword}" mandatory="false" />
					<atm-search-param search="mediaresult" type="item" value="{request:int:item}" mandatory="false" />
					<atm-search-limit search="mediaresult" value="10" />
					<atm-search-page search="mediaresult" value="{request:int:page}" />
					<atm-search-order search="mediaresult" type="objectID" direction="desc" />
					<atm-result search="mediaresult">
						<atm-if what="{firstresult} &amp;&amp; !{request:int:item}">
							<div id="maxResults">{maxresults} r&eacute;sultat(s) pour votre recherche.</div>
						</atm-if>
						<div class="mediaTop">
							<div class="mediaBottom">
								<h2 title="Afficher - Masquer le m&eacute;dia">{['object2']['label']}&nbsp;&nbsp;<span class="date">{['object2']['formatedDateStart']|d/m/Y}</span></h2><atm-if what="{['object2']['fields'][9]['fileIcon']}"><span class="picto"><a href="{page:self:url}?cat={['object2']['fields'][8]['id']}" rel="search" alt="Chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}" title="Chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}"><img src="{['object2']['fields'][9]['fileIcon']}" alt="Fichier {['object2']['fields'][9]['fileExtension']} - Cliquez pour chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}" title="Fichier {['object2']['fields'][9]['fileExtension']} - Cliquez pour chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}" /></a></span></atm-if><div class="spacer"></div>
								<div class="mediaContent">
									<div class="mediafile">
										<atm-if what="{['object2']['fields'][9]['fileExtension']} != 'flv' &amp;&amp; {['object2']['fields'][9]['fileExtension']} != 'mp3' &amp;&amp; {['object2']['fields'][9]['fileExtension']} != 'jpg' &amp;&amp; {['object2']['fields'][9]['fileExtension']} != 'gif' &amp;&amp; {['object2']['fields'][9]['fileExtension']} != 'png'">
											<a href="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}" target="_blank" title="T&eacute;l&eacute;charger le document '{['object2']['fields'][9]['fileLabel']}' ({['object2']['fields'][9]['fileExtension']} - {['object2']['fields'][9]['fileSize']}Mo)"><atm-if what="{['object2']['fields'][9]['fileIcon']}"><img src="{['object2']['fields'][9]['fileIcon']}" alt="Fichier {['object2']['fields'][9]['fileExtension']}" title="Fichier {['object2']['fields'][9]['fileExtension']}" /></atm-if> {['object2']['label']}</a>
											<atm-if what="{['object2']['fields'][9]['thumbnail']}">
												<div class="imgLeft shadow">
													<img src="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['thumbnail']}" alt="{['object2']['label']}" title="{['object2']['label']}" />
												</div>
											</atm-if>
										</atm-if>
										<atm-if what="{['object2']['fields'][9]['fileExtension']} == 'flv'">
											<atm-if what="{['object2']['fields'][9]['thumbnail']}">
												<script type="text/javascript">
													swfobject.embedSWF('/automne/playerflv/player_flv.swf', 'media-{['object2']['id']}', '320', '200', '9.0.0', '/automne/swfobject/expressInstall.swf', {flv:'{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}', configxml:'/automne/playerflv/config_playerflv.xml', startimage:'{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['thumbnail']}'}, {allowfullscreen:true, wmode:'transparent'}, false);
												</script>
											</atm-if>
											<atm-if what="!{['object2']['fields'][9]['thumbnail']}">
												<script type="text/javascript">
													swfobject.embedSWF('/automne/playerflv/player_flv.swf', 'media-{['object2']['id']}', '320', '200', '9.0.0', '/automne/swfobject/expressInstall.swf', {flv:'{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}', configxml:'/automne/playerflv/config_playerflv.xml'}, {allowfullscreen:true, wmode:'transparent'}, false);
												</script>
											</atm-if>
											<div id="media-{['object2']['id']}" class="pmedias-video" style="width:320px;height:200px;">
												<p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a></p>
											</div>
										</atm-if>
										<atm-if what="{['object2']['fields'][9]['fileExtension']} == 'mp3'">
											<script type="text/javascript">
												swfobject.embedSWF('/automne/playermp3/player_mp3.swf', 'media-{['object2']['id']}', '200', '20', '9.0.0', '/automne/swfobject/expressInstall.swf', {mp3:'{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}', configxml:'/automne/playermp3/config_playermp3.xml'}, {wmode:'transparent'}, false);
											</script>
											<div id="media-{['object2']['id']}" class="pmedias-audio" style="width:200px;height:20px;">
												<p><a href="http://www.adobe.com/go/getflashplayer"><img src="http://www.adobe.com/images/shared/download_buttons/get_flash_player.gif" alt="Get Adobe Flash player" /></a></p>
											</div>
											<atm-if what="{['object2']['fields'][9]['thumbnail']}">
												<div class="imgLeft shadow">
													<img src="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['thumbnail']}" alt="{['object2']['label']}" title="{['object2']['label']}" />
												</div>
											</atm-if>
										</atm-if>
										<atm-if what="{['object2']['fields'][9]['fileExtension']} == 'jpg' || {['object2']['fields'][9]['fileExtension']} == 'gif' || {['object2']['fields'][9]['fileExtension']} == 'png'">
											<div class="imgLeft shadow">
												<atm-if what="{['object2']['fields'][9]['thumbnail']}">
													<a href="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}" onclick="javascript:CMS_openPopUpImage('imagezoom.php?location=public&amp;module=pmedia&amp;file={['object2']['fields'][9]['filename']}&amp;label={['object2']['label']|js}');return false;" target="_blank" title="Voir l'image '{['object2']['label']}' ({['object2']['fields'][9]['fileExtension']} - {['object2']['fields'][9]['fileSize']}Mo)"><img src="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['thumbnail']}" alt="{['object2']['label']}" title="{['object2']['label']}" /></a>
												</atm-if>
												<atm-if what="!{['object2']['fields'][9]['thumbnail']}">
													<img src="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}" alt="{['object2']['label']}" title="{['object2']['label']}" style="max-width:200px;" />
												</atm-if>
											</div>
										</atm-if>
									</div>
									<div class="mediadesc">
										Cat&eacute;gorie : <a href="{page:self:url}?cat={['object2']['fields'][8]['id']}" rel="search" alt="Chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}" title="Chercher dans la cat&eacute;gorie {['object2']['fields'][8]['label']}"><strong>{['object2']['fields'][8]['label']}</strong></a><br />
										Taille : <strong>{['object2']['fields'][9]['fileSize']}Mo</strong><br />
										T&eacute;l&eacute;charger : <a href="{['object2']['fields'][9]['filePath']}/{['object2']['fields'][9]['filename']}" target="_blank" title="T&eacute;l&eacute;charger le document '{['object2']['fields'][9]['fileLabel']}' ({['object2']['fields'][9]['fileExtension']} - {['object2']['fields'][9]['fileSize']}Mo)"><strong>{['object2']['label']}</strong></a><br />
										<atm-if what="{['object2']['fields'][7]['value']}">
											{['object2']['fields'][7]['value']}
										</atm-if>
									</div>
									<div class="spacer"></div>
								</div>
							</div>
						</div>
						<atm-if what="{lastresult} &amp;&amp; !{request:int:item}">
							<div class="pages" id="pages">
								<atm-function function="pages" maxpages="{maxpages}" currentpage="{currentpage}" displayedpage="5">
									<pages><a href="{page:self:url}?cat={request:int:cat}&amp;keyword={request:string:keyword}&amp;page={n}">{n}</a> </pages>
									<currentpage><strong>{n}</strong> </currentpage>
									<previous><a href="{page:self:url}?cat={request:int:cat}&amp;keyword={request:string:keyword}&amp;page={n}"><img src="img/demo/interieur/newsPrevious.gif" alt="Page pr&eacute;c&eacute;dente" title="Page pr&eacute;c&eacute;dente" /></a> </previous>
									<next><a href="{page:self:url}?cat={request:int:cat}&amp;keyword={request:string:keyword}&amp;page={n}"><img src="img/demo/interieur/newsNext.gif" alt="Page suivante" title="Page suivante" /></a> </next>
								</atm-function> 
							</div>
						</atm-if>
					</atm-result>
					<atm-noresult search="mediaresult">Aucun r&eacute;sultat trouv&eacute; pour votre recherche ...</atm-noresult>
				</atm-search>
			</atm-xml>
		</div>
	</block>
</row>